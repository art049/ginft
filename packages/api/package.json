{
  "name": "@ginft/api",
  "private": true,
  "scripts": {
    "dev": "concurrently -n mongo,next,prisma-client,graphql-schema,prisma-studio 'pnpm dev:mongo' 'sleep 5; pnpm dev:next' 'pnpm dev:prisma-client' 'sleep 5; pnpm dev:graphql-schema' 'pnpm dev:prisma-studio'",
    "dev:next": "next dev -p 3001",
    "dev:prisma-client": "prisma generate --watch",
    "dev:graphql-schema": "ts-node -r tsconfig-paths/register scripts/generateSchema.ts --watch",
    "dev:prisma-studio": "prisma studio --browser none",
    "dev:mongo": "concurrently 'docker-compose -f ./mongodb/docker-compose.yml up' 'cd mongodb; ./start.sh'",
    "lint": "next lint",
    "link:smart-contracts": "pnpm link --global @demoslabs/smart-contracts",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:update-preview": "source ./.env; MONGO_URL=$PREVIEW_MONGO_URL sh -c 'pnpm build:prisma-client && pnpm prisma:apply-constraints && ts-node prisma/seed.ts'",
    "prisma:apply-constraints": "prisma db push --skip-generate  --schema=./prisma/schema.prisma",
    "build": "pnpm run build:deps && pnpm run build:next",
    "build:deps": "pnpm build:prisma-client && pnpm run build:graphql-schema",
    "build:prisma-client": "prisma generate",
    "build:graphql-schema": "ts-node -r tsconfig-paths/register scripts/generateSchema.ts",
    "build:next": "next build",
    "clean": "rm -rf .next generated/* && pnpm clean:mongo",
    "clean:mongo": "cd mongodb; ./clean.sh"
  },
  "dependencies": {
    "@ginft/contracts": "workspace:^1.0.0",
    "@ginft/web3token": "workspace:^1.0.0",
    "@prisma/client": "^3.8.1",
    "apollo-server-micro": "^3.6.1",
    "axios": "^0.24.0",
    "class-validator": "^0.13.2",
    "dotenv": "^11.0.0",
    "ethers": "^5.5.3",
    "graphql": "^15.8.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.14.1",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "next": "12.0.8",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-typescript": "^7.13.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-fields": "^1.3.4",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "17.0.8",
    "@types/watch": "^1.0.3",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "concurrently": "^7.0.0",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.8",
    "lodash": "^4.17.21",
    "prisma": "^3.8.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typegraphql-prisma": "^0.18.4",
    "typescript": "4.5.4",
    "watch": "^1.0.2"
  }
}
