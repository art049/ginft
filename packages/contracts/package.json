{
  "name": "@demoslabs/smart-contracts",
  "version": "1.0.29",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "pnpm compile && pnpm build:typescript && pnpm export-deployments",
    "build:typescript": "pnpm tsc -p tsconfig.build.json && pnpm copy-dts",
    "clean": "pnpm hardhat clean && rm -rf cache deployments/hardhat deployments/localhost deployments.json dist",
    "compile": "pnpm hardhat clean && pnpm hardhat compile",
    "copy-dts": "pnpm copyfiles -u 1 lib/**/*.d.ts dist",
    "dev:contracts": "watch 'pnpm compile && pnpm build:typescript' contracts",
    "dev": "pnpm link-package && pnpm concurrently -n contracts,node 'pnpm dev:contracts' 'pnpm node'",
    "export-deployments": "pnpm hardhat deploy --export-all dist/deployments.json",
    "format": "prettier -w .",
    "lint": "lefthook run lint",
    "link-package": "pnpm link --global",
    "manager": "pnpm hardhat --network localhost run scripts/manager/index.ts",
    "node": "pnpm hardhat node",
    "prepack": "pnpm build && clean-package",
    "test": "pnpm hardhat test",
    "test:coverage": "pnpm hardhat coverage",
    "test:report-gas": "OPTIMIZE=true REPORT_GAS=true pnpm test",
    "deploy:demos": "hardhat deploy --network demos --reset"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@chainlink/contracts": "^0.3.1",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/units": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.4.2",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.3.0",
    "@types/inquirer": "^8.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.20",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "axios": "^0.26.0",
    "bluebird": "^3.7.2",
    "chai": "^4.3.4",
    "clean-package": "^2.1.1",
    "concurrently": "^6.5.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.2",
    "hardhat-deploy": "^0.9.24",
    "hardhat-gas-reporter": "^1.0.7",
    "hardhat-prettier": "^0.0.1",
    "inquirer": "^8.2.0",
    "keccak256": "^1.0.6",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.7",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "sleep-promise": "^9.1.0",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5",
    "watch": "^1.0.2",
    "web3": "^1.6.1",
    "yaml-lint": "^1.2.4"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/providers": "^5.5.2"
  },
  "clean-package": {
    "remove": [
      "devDependencies",
      "dependencies",
      "clean-package"
    ],
    "replace": {
      "scripts": {
        "postpack": "clean-package restore"
      }
    }
  }
}
